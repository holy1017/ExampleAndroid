<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color하늘색"
            >
            <TextView
                android:text="Hello World1!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                />
            <TextView
                android:text="Hello World2!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/color노랑색"
                />
            <TextView
                android:text="Hello World3!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/color초록색"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:background="@color/color파랑색1"
           >
            <TextView
                android:text="Hello World4!"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@color/color빨강색"
                />
            <TextView
                android:text="Hello World5!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/color분홍색"
                />
            <TextView
                android:text="Hello World6!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@color/color보라색"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           >
            <TextView
                android:text="Hello World6!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Hello World7!"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@color/color연두색"
                />
            <TextView
                android:text="Hello World8!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:background="@color/color보라색"
            android:orientation="vertical"
           >
            <TextView
                android:text="vertical 1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="@color/color연두색"
                />
            <TextView
                android:text="vertical 2 center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/color연두색"
                />
            <TextView
                android:text="vertical 3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="@color/color연두색"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:background="@color/color주황색"
            android:orientation="horizontal"
           >
            <TextView
                android:text="horizontal 1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/color연두색"
                />
            <TextView
                android:text="horizontal 2 center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/color연두색"
                />
            <TextView
            android:text="horizontal 3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/color연두색"
            />
        </LinearLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="텍스트 입력"
            android:textColorHint="@color/color주황색"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내용~~~~~~~~~~"
            />
    </LinearLayout>

</RelativeLayout>
